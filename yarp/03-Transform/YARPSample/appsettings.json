{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      //"route1": {
      //  "ClusterId": "cluster1",
      //  "Match": {
      //    "Path": "/replace"
      //  }
      //},
      "routeV1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/v1/{**rem}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{rem}"
          }
        ]
      },
      "routeV2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/v2/{**rem}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/version"
          }
        ]
      },
      "route2": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5300"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5310"
          }
        }
      }
    }
  }
}
